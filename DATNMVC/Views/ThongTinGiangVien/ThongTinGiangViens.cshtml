@model IEnumerable<DATNMVC.Models.ThongTinGiangVien>

@{
    ViewBag.Title = "ThongTinGiangViens";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var taikhoan = Session["Taikhoan"] as DATNMVC.Models.TaiKhoan;
}
@{
    if (taikhoan.CodeGiangVien == "Admin")
    {
        <p class="btn btn-secondary text-white">
            <a href="/ThongTinGiangVien/Create" style=" text-decoration: none;color:white">Thêm giảng viên</a>
        </p>
    }
}

<table id="example" class="table table-striped table-bordered" style="width:100%;font-family: -webkit-body;">
    <thead>
        <tr>
            <th>Họ Tên</th>
            <th>Email</th>
            <th>Đơn vị công tác</th>
            <th>Chuyên ngành</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.hoTen</td>
            <td>@item.Email</td>
            <td>@item.DonViCongTac</td>
            <td>@item.chuyenNganh</td>
            @if (taikhoan.CodeGiangVien == item.Code || taikhoan.CodeGiangVien == "Admin")
            {
                <td><a href="/ThongTinGiangVien/Update/@item.ID"><svg style=" width: 133px; height: 31px;" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-up-left" viewBox="0 0 16 16">
    <path fill-rule="evenodd" d="M7.364 3.5a.5.5 0 0 1 .5-.5H14.5A1.5 1.5 0 0 1 16 4.5v10a1.5 1.5 0 0 1-1.5 1.5h-10A1.5 1.5 0 0 1 3 14.5V7.864a.5.5 0 1 1 1 0V14.5a.5.5 0 0 0 .5.5h10a.5.5 0 0 0 .5-.5v-10a.5.5 0 0 0-.5-.5H7.864a.5.5 0 0 1-.5-.5z" />
    <path fill-rule="evenodd" d="M0 .5A.5.5 0 0 1 .5 0h5a.5.5 0 0 1 0 1H1.707l8.147 8.146a.5.5 0 0 1-.708.708L1 1.707V5.5a.5.5 0 0 1-1 0v-5z" />
</svg></a></td>
            }
            else
            {
                <td style="opacity:0">Sửa</td>
            }
        </tr>
        }
    </tbody>
</table>
